<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detail_author_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumText"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        tools:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_review_content_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:text="Some Review Here"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/detail_author_textview"
        app:layout_constraintLeft_toLeftOf="@id/detail_author_textview" />

    <TextView
        android:id="@+id/detail_show_more_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_review_show_more_label"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/detail_review_content_textview"
        app:layout_constraintLeft_toLeftOf="@id/detail_review_content_textview" />

    <View
        android:id="@+id/detail_review_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/detail_show_more_textview"
        />



</android.support.constraint.ConstraintLayout>